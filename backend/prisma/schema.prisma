generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  name          String
  email         String         @unique
  password      String
  role          String         @default("user")
  familyId      Int?
  banks         Bank[]
  Event         Event[]
  ownedFamilies Family[]       @relation("FamilyOwner")
  FamilyMember  FamilyMember[] @relation("UserFamilyMembers")
  finances      Finance[]
  goals         Goal[]
  family        Family?        @relation("UserFamily", fields: [familyId], references: [id])
}

model Bank {
  id          Int       @id @default(autoincrement())
  userId      Int
  name        String
  accountType String?
  balance     Float     @default(0.0)
  logo        String?
  createdAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id])
  finances    Finance[]

  @@index([userId])
}

model Finance {
  id          Int           @id @default(autoincrement())
  userId      Int
  bankId      Int?
  description String
  amount      Float
  type        String
  date        DateTime      @default(now())
  memberId    Int?
  Bank        Bank?         @relation(fields: [bankId], references: [id])
  member      FamilyMember? @relation(fields: [memberId], references: [id])
  User        User          @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([bankId])
}

model Menu {
  id         Int      @id @default(autoincrement())
  name       String
  icon       String?
  path       String?
  role       String?
  orderIndex Int      @default(0)
  isActive   Boolean  @default(true)
  parentId   Int?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  parent     Menu?    @relation("SubMenus", fields: [parentId], references: [id])
  submenus   Menu[]   @relation("SubMenus")
}

model Goal {
  id            Int       @id @default(autoincrement())
  userId        Int
  title         String
  targetAmount  Float
  currentAmount Float     @default(0)
  deadline      DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  User          User      @relation(fields: [userId], references: [id])
}

model Event {
  id          Int      @id @default(autoincrement())
  userId      Int
  title       String
  description String?
  amount      Float?
  type        String?
  date        DateTime
  notified    Boolean  @default(false)
  user        User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Family {
  id        Int            @id @default(autoincrement())
  name      String
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  ownerId   Int
  owner     User           @relation("FamilyOwner", fields: [ownerId], references: [id])
  members   FamilyMember[]
  users     User[]         @relation("UserFamily")
}

model FamilyMember {
  id             Int       @id @default(autoincrement())
  familyId       Int
  userId         Int?
  name           String
  role           String    @default("viewer")
  avatar         String?
  partialBalance Float     @default(0)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  family         Family    @relation(fields: [familyId], references: [id])
  User           User?     @relation("UserFamilyMembers", fields: [userId], references: [id])
  Finance        Finance[]
}
